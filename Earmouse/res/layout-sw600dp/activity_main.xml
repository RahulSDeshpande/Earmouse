<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="pk.contender.earmouse.Main"
    tools:ignore="MergeRootFrame" >

    <fragment
        android:id="@+id/fragment_modulelist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        class="pk.contender.earmouse.ModuleListFragment"
        tools:layout="@layout/fragment_modulelist" >
    </fragment>
    
    <View
        android:id="@+id/fragment_divider"
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_marginBottom="1dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="1dip"
        android:background="@color/gray"
        android:divider="?android:attr/dividerHorizontal" />

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_marginBottom="1dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="1dip"
        android:background="@color/gray"
        android:divider="?android:attr/dividerHorizontal" />

    <fragment
        android:id="@+id/fragment_exercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        class="pk.contender.earmouse.ExerciseFragment"
        tools:layout="@layout/fragment_exercise" >
    </fragment>

</LinearLayout>